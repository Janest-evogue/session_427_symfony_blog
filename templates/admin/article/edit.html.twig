{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edition article</h1>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}
    {% if original_image is not null %}
        <p>Actuellement :</p>
        <img src="{{ asset('images/' ~ original_image) }}" height="150px">
    {% endif %}

    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a class="btn btn-outline-secondary"
           href="{{ path('app_admin_article_index') }}">
            Retour
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# pour l'affichage du nom du fichier upload√© dans le champs de formulaire #}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
{% endblock %}

