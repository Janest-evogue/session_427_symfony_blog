{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestion articles</h1>

    <a href="{{ path('app_admin_article_edit') }}"
       class="btn btn-outline-primary mb-3">
        Rédiger un article
    </a>

    <table class="table table-striped">
        <tr class="table-dark">
            <th>Id</th>
            <th>Titre</th>
            <th>Date pub.</th>
            <th>Catégorie</th>
            <th>Auteur</th>
            <th width="250px"></th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.publicationDate|date('d/m/Y H:i') }}</td>
                {# l'attribut $category de Article contient un objet Category #}
                <td>{{ article.category.name }}</td>
                {#
                l'attribut $author de Article contient un objet User
                et la classe User contient une méthode __toString
                #}
                <td>{{ article.author }}</td>
                <td></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
